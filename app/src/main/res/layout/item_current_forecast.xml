<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemCurrentForecastTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16:00"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/itemCurrentForecastImageView"
        app:layout_constraintStart_toStartOf="@+id/itemCurrentForecastImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/itemCurrentForecastImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemCurrentForecastTime"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/itemCurrentForecastTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="16Â°"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/itemCurrentForecastImageView"
        app:layout_constraintStart_toStartOf="@+id/itemCurrentForecastImageView"
        app:layout_constraintTop_toBottomOf="@+id/itemCurrentForecastImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>